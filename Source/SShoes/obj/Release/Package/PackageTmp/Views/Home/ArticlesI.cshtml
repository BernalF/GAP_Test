@model IEnumerable<SShoes.Models.ArticlesModel>
@{
    ViewBag.Title = "Articles";
    ViewBag.activeIndex = 1;
    ViewBag.hasGrid = true;
}
@section styles {

}

<div class="container">
    <div class="row">
        @Html.Partial("_NavIndex")
        <div class="span9">
            <div class="hero-unit">
                <h2>Articles List</h2>
                <div class="row-fluid">
                    <div class="span3 offset9">
                        <a href="@Url.Action("ArticlesN", "Home", routeValues: null)" class="btn btn-primary btn-large"><i class="icon-plus"></i>Add Articles</a>
                    </div>
                </div>
                @(Html.Grid(Model)
                    .SetLanguage("en")
                    .Sortable()
                    .Filterable()
                    .AutoGenerateColumns()
                    .Columns(c =>
                        {
                            c.Add()
                                .Encoded(false)
                                .Sanitized(false)
                                .SetWidth(80)
                                .RenderValueAs(d => @<span>
                                    <a  href="@Url.Action("ArticlesE", "Home", new { id = d.ArticleId})" class="btn btn-warning btn-small btn-block" ><i class="icon-pencil"></i>Edit</a>
                                </span>);
                        }))
            </div>
        </div>
    </div>
</div>

